<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/post_card_img_background"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="@string/post_card_img_accessibility"
                android:scaleType="centerCrop"
                tools:src="@drawable/singer" />

            <TextView
                android:id="@+id/post_card_txt_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="12dp"
                android:paddingEnd="@dimen/post_card_text_start_padding"
                android:paddingStart="@dimen/post_card_text_start_padding"
                android:paddingTop="12dp"
                android:theme="@style/AppTheme.Text.Body1"
                tools:text="01/01/2018 00:00 AM" />

            <TextView
                android:id="@+id/post_card_txt_subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="12dp"

                android:paddingEnd="@dimen/post_card_text_start_padding"
                android:paddingStart="@dimen/post_card_text_start_padding"
                android:theme="@style/AppTheme.Text.Subtitle"
                tools:text="Set of 20 images" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>